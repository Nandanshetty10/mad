<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B924545C"
    android:backgroundTint="#7693DC"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_gravity="center"
        android:background="#E2505657"
        android:paddingVertical="20px"
        android:text="CALCULATOR"
        android:textAlignment="center"
        android:textColor="#792CF4"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/num1"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:hint="Enter First Number"
        android:textAlignment="center"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/num2"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:hint="Enter Second Number"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#EADFDF"
        android:backgroundTint="#9F9595"
        android:hint="Result"
        android:textAlignment="center"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="#808080"
            android:backgroundTint="#808080"
            android:onClick="seven"
            android:text="7"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="#808080"
            android:backgroundTint="#808080"
            android:onClick="eight"
            android:text="8"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/nine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="#808080"
            android:backgroundTint="#808080"
            android:onClick="nine"
            android:text="9"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/divide"
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="#808080"
            android:backgroundTint="#808080"
            android:onClick="divide"
            android:text="/"
            android:textAlignment="center"
            android:textColor="@color/black" />
    </LinearLayout>
    <!--</LinearLayout>-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="#808080"
            android:backgroundTint="#808080"
            android:onClick="four"
            android:text="4"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="#808080"
            android:backgroundTint="#808080"
            android:onClick="five"
            android:text="5"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="#808080"
            android:backgroundTint="#808080"
            android:onClick="six"
            android:text="6"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/multiply"
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="#808080"
            android:backgroundTint="#808080"
            android:onClick="multiply"
            android:text="*"
            android:textAlignment="center"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="#808080"
            android:backgroundTint="#808080"
            android:onClick="one"
            android:text="1"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="#808080"
            android:backgroundTint="#808080"
            android:onClick="two"
            android:text="2"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="#808080"
            android:onClick="three"
            android:text="3"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/add"
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="#808080"
            android:onClick="add"
            android:text="+"
            android:textAlignment="center"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="#808080"
            android:onClick="dot"
            android:text="."
            android:textAlignment="center"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="#808080"
            android:onClick="zero"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/equals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="#808080"
            android:onClick="compute"
            android:text="="
            android:textAlignment="center"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/minus"
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="#808080"
            android:onClick="sub"
            android:text="- "
            android:textAlignment="center"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="87dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/clear_one_digit_at_a_time"
            android:layout_width="142dp"
            android:layout_height="87dp"
            android:layout_margin="2dp"
            android:background="#808080"
            android:onClick="clear_one_digit_at_a_time"
            android:text="C"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/clear_one_field_completely"
            android:layout_width="124dp"
            android:layout_height="87dp"
            android:layout_margin="2dp"
            android:background="#808080"
            android:onClick="clear_one_field_completely"
            android:text="CE"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/All_Clear"
            android:layout_width="119dp"
            android:layout_height="86dp"
            android:layout_margin="2dp"
            android:background="#808080"
            android:onClick="All_Clear"
            android:text="AC"
            android:textAlignment="center"
            android:textColor="@color/black" />
    </LinearLayout>
</LinearLayout>
